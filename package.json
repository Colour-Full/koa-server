{
  "name": "spa-server",
  "version": "1.20.0",
  "description": "Simple SPA Server build with Koa JS",
  "repository": {
    "type": "git",
    "url": "https://github.com/Colour-Full/koa-server.git"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib"
  ],
  "bin": {
    "spa-server": "./lib/bin/server.js"
  },
  "scripts": {
    "clean": "rimraf es lib",
    "premake": "yarn clean && mkdir -p ./lib",
    "make": "babel ./src --out-dir ./lib --ignore __tests__",
    "test": "jest __tests__",
    "start": "SPA_FOR_CLIENT=something PUBLIC_DIR='./mock-consumer-project/dist/public' babel-node src/bin/server",
    "preversion": "yarn test",
    "version": "yarn run make && git add -A lib",
    "postversion": "git push && git push --tags"
  },
  "config": {
    "hot": "hot"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "koa": "^2.5.0",
    "koa-compress": "^3.0.0",
    "koa-mount": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.2",
    "koa-webpack": "^3.0.2",
    "lodash": "^4.17.5",
    "node-server-logger": "https://github.com/Colour-Full/node-server-logger.git"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-project-relative-require": "^2.0.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.19",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-flowtype": "^2.42.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.7.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.6.1",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^22.4.3",
    "rimraf": "^2.6.2",
    "webpack": "^4.1.1"
  },
  "peerDependencies": {
    "koa": "2.x"
  }
}
